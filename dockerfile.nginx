FROM nginx:latest
WORKDIR /etc/nginx/conf.d/
RUN rm default.conf
COPY ./www.conf ./
COPY ./admin.conf ./
RUN apt-get update
RUN apt-get install certbot python-certbot-nginx
RUN certbot run -n --nginx --agree-tos -d ${ADMIN_URL}  -m  ${CERTBOT_EMAIL}  --redirect
RUN certbot run -n --nginx --agree-tos -d ${WWW_URL}  -m  ${CERTBOT_EMAIL}  --redirect